# PaiNaiDee AI Assistant Environment Configuration
# Copy this file to .env and configure your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# AI Model Configuration
AI_API_URL=http://localhost:8000
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
MODEL_CACHE_DIR=/app/models

# Model Selection (change these to use different models)
GREETING_MODEL=tiiuae/falcon-7b-instruct
SUMMARIZATION_MODEL=facebook/bart-large-cnn

# External API Keys (optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key
SERP_API_KEY=your_serpapi_key

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/painaidee

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600  # 1 hour in seconds